%div
  = semantic_form_for @sensu_api_server do |f|
    .row
      %div.col-xs-8#api_url
        = f.input :value, :label => "Sensu API Server url"
        = f.action :submit, :button_html => { :class => "btn btn-primary" }
      %div.col-xs-4
        %p (e.g. http://username:password@sensu.myorg.com:4567)
        %p No trailing /'s please.
  %br
  %br
  = semantic_form_for @use_environments do |f|
    .row
      %div.col-xs-8
        = f.input :value, :label => "Show environment for Client/Event", :as => :select, :collection => ["true", "false"]
        = f.action :submit, :button_html => { :class => "btn btn-primary" }
      %div.col-xs-4
        %p Note: Clients must have environments set to filter into Client & Event.
  %br
  %br
  = semantic_form_for @configure_server do |f|
    .row
      %div.col-xs-8
        = f.input :value, :label => "Configure Server checks", :as => :select, :collection => ["true", "false"]
        = f.action :submit, :button_html => { :class => "btn btn-primary" }
      %div.col-xs-4
        %p Note: Configures check to run on clients
