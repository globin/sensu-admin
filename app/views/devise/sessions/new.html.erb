<div class="col-sm-6 col-md-4 col-md-offset-4 login-container">
  <h2 class="text-center">Sign in</h2>

  <%= form_for(resource, :html => {:class => "form-signin"}, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    <%= f.email_field :email, :autofocus => true, :class => "form-control" %>
    <%= f.password_field :password, :class => "form-control" %>

    <% if devise_mapping.rememberable? -%>
      <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
    <% end -%>

    <div><%= f.submit "Sign in", :class => "btn btn-lg btn-primary btn-block" %></div>

    <br>
    <%= render "devise/shared/links" %>
  <% end %>
</div>
